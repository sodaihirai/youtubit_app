<% if !@movies.nil? %>
	<ul>
	<% @movies.each do |movie| %>
		<li class="movies-item">
			<ul>
				<li>
					<%= link_to movie[:snippet][:title], "https://www.youtube.com/watch?v=#{movie[:id][:video_id]}", target: "_blank", class: "search-movie-title"  %>
				</li>
				<li>
					<%= image_tag(movie[:snippet][:thumbnails][:default][:url], alt: "thumbnail", class: "thumbnail") %>
				</li>
				<div class="row">
					<li class="col-md-6">
						<%= link_to "チャンネル: #{movie[:snippet][:channel_title]}",
									 "https://www.youtube.com/channel/#{movie[:snippet][:channel_id]}", target: "_blank" %>
					</li>
					<li class="col-md-4 col-md-offset-2">
						<%= link_to "投稿する", new_micropost_url(video_title: movie[:snippet][:title],
															       video_thumbnail: movie[:snippet][:thumbnails][:default][:url],
															       channel_title:   movie[:snippet][:channel_title],
															       video_url:       "https://www.youtube.com/watch?v=#{movie[:id][:video_id]}"),
															       class: "btn btn-primary" %>
					</li>
				</div>
			</ul>
		</li>
	<% end %>
	</ul>
<% else %>
	<p class="non-items-title">検索結果はありません</p>
<% end %>	