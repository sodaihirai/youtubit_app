<% provide(:title, "投稿一覧") %>
<h1>投稿一覧</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-6 search-form-wrapper">
			<div class="dropdown search-dropdown">
	            <a href="#" class="dropdown-toggle header-link" data-toggle="dropdown">
	              ジャンル <b class="caret"></b>
	            </a>
	            <!-- 検索のコントローラーとビューを編集 -->
	            <ul class="dropdown-menu">
	              <li><%= link_to "全ジャンル",  microposts_path(sort_version: params[:sort_version], search_version: params[:search_version], video_type: "全ジャンル") %></li>	
	              <li><%= link_to "スポーツ",  microposts_path(sort_version: params[:sort_version], search_version: params[:search_version], video_type: "スポーツ") %></li>	
	              <li><%= link_to "モチベーション", microposts_path(sort_version: params[:sort_version], search_version: params[:search_version],
	              		video_type: "モチベーション") %></li>
	             </ul>
	        </div>
			<div class="dropdown search-dropdown">
	            <a href="#" class="dropdown-toggle header-link" data-toggle="dropdown">
	              フィルター <b class="caret"></b>
	            </a>
	            <!-- 検索のコントローラーとビューを編集 -->
	            <ul class="dropdown-menu">
	              <li><%= link_to "投稿日順",  microposts_path(sort_version: "post_created_at", search_version: params[:search_version],
	              		video_type: params[:video_type]) %></li>	
	              <li><%= link_to "いいね数順", microposts_path(sort_version: "like_count", search_version: params[:search_version],
	              		 video_type: params[:video_type]) %></li>
	             </ul>
	        </div>
			<div class="dropdown search-dropdown">
	            <a href="#" class="dropdown-toggle header-link" data-toggle="dropdown">
	              検索メニュー <b class="caret"></b>
	            </a>
	            <!-- 検索のコントローラーとビューを編集 -->
	            <ul class="dropdown-menu">
	              <li><%= link_to "コメント検索", microposts_path(sort_version: params[:sort_version], search_version: "content",
	              												video_type: params[:video_type]) %></li>
	              <li><%= link_to "タイトル検索", microposts_path(sort_version: params[:sort_version], search_version: "video_title",
	                                                            video_type: params[:video_type]) %></li>
	              <li><%= link_to "チャンネル検索", microposts_path(sortt_version: params[:sort_version], search_version: "channel_title",
	                                                              video_type: params[:video_type]) %></li>
	             </ul>
	        </div>
		<%= form_tag(index_search_microposts_path, remote: true) do %>
			<span class="form-search-anything">
	 			<%= search_field_tag "q", params[:q], class: "form-control", placeholder: "#{@search_version_jp}検索" %>
	 			<%= hidden_field_tag :search_version, params[:search_version] %>
	 			<%= hidden_field_tag :sort_version,   params[:sort_version] %>
	 			<%= hidden_field_tag :video_type,     params[:video_type] %>
			</span>
			<span class="form-search-anything">
	 			<%= submit_tag "検索", class: "btn btn-default" %>
			</span>
		<% end %>
	</div>
</div>
<div id="javascript-micropost-index">
	<%= render 'microposts/micropost', microposts: @microposts %>
	<%= will_paginate %>
</div>
