<% provide(:title, 'Edit') %>
<h1>ユーザー編集</h1>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit "ユーザー編集", class: "btn btn-primary" %>
<% end %>