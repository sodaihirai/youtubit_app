<% provide(:title, 'Signup') %>
<h1>ユーザー登録</h1>
<div class="row">
	<div class="singup-form col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-item field">
					<%= f.label :name, value: "ユーザー名" %>
					<%= f.text_field :name%>
			</div>

			<div class="form-item field">
				<%= f.label :email, value: "メールアドレス" %>
				<%= f.email_field :email%>
			</div>

			<div class="form-item field">
				<%= f.label :password, value: "パスワード" %>
				<%= f.password_field :password%>
			</div>

			<div class="form-item field">
				<%= f.label :password_confirmation, value:"パスワード確認用" %>
				<%= f.password_field :password_confirmation%>
			</div>

			<div class="form-btn">
			<p><%= f.submit "ユーザー登録", class: "btn btn-primary submit-btn" %></p>
			</div>
		<% end %>
	</div>
</div>